@model IEnumerable<ApplicationWeb.Models.categorie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">Categorie</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Categorie</h1>
			</div>
		</div><!--/.row-->
    <a href="@Url.Action("create","categorie")" class=" btn btn-sm  btn-success"><i class="fa fa-plus mr-2"></i>Nouvelle categorie</a>
			<div class="row">
                <table class ="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                             <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            
                            <td> @Html.DisplayFor(modelItem=>item.ID)</td>
                            @Html.ActionLink("Edit","Edit",new {Id=item.ID})
                            <td>@Html.DisplayFor(modelItem=>item.NomCategorie) </td>                
                            <td>
                                <a class=" btn btn-smm= btn-info"><i class="fa fas-edit"></i></a>
                                <button class=" btn btn-smm= btn-info"><i class="fa fas-trash"></i></button>
                            </td>
                        </tr>
                        }
                          
                    </tbody>
                </table>
			</div>
            </div>
  
